<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:text="Network"
        android:title="@string/settings_network_header"
        tools:text="Network">

        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_network_local_port" />
        <EditTextPreference
            android:title="@string/settings_network_server_host"
            app:key="signature"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_network_local_port" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/settings_client_header">
        <EditTextPreference
            android:defaultValue="Default value"
            android:key="edit_text_preference_1"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/settings_client_id" />
    </PreferenceCategory>

</PreferenceScreen>